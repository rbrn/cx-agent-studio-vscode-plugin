{
  "name": "ces-package-validator",
  "displayName": "CES Package Validator",
  "description": "Real-time validation for Google Customer Engagement Suite / Dialogflow CX Agent Studio package files.",
  "version": "0.4.0",
  "publisher": "acmebank",
  "license": "UNLICENSED",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "main": "./dist/extension.js",
  "bin": {
    "ces-validate": "./dist/cli.js"
  },
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:ces-instruction",
    "onCommand:cesValidator.validateCurrentPackage",
    "onCommand:cesValidator.clearDiagnostics"
  ],
  "contributes": {
    "configurationDefaults": {
      "files.associations": {
        "**/agents/*/instruction.txt": "ces-instruction",
        "**/global_instruction.txt": "ces-instruction"
      }
    },
    "languages": [
      {
        "id": "ces-instruction",
        "aliases": [
          "CES Instruction",
          "CES Agent Instruction"
        ],
        "filenames": [
          "global_instruction.txt"
        ],
        "filenamePatterns": [
          "**/agents/*/instruction.txt",
          "**/global_instruction.txt"
        ],
        "configuration": {
          "comments": {
            "blockComment": [
              "<!--",
              "-->"
            ]
          }
        }
      }
    ],
    "grammars": [
      {
        "language": "ces-instruction",
        "scopeName": "text.xml.ces-instruction",
        "path": "./syntaxes/ces-instruction.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cesValidator",
          "title": "CES Package",
          "icon": "$(package)"
        }
      ]
    },
    "views": {
      "cesValidator": [
        {
          "id": "cesPackageExplorer",
          "name": "Package Explorer",
          "icon": "$(package)",
          "contextualTitle": "CES Package Validator"
        }
      ]
    },
    "commands": [
      {
        "command": "cesValidator.validateCurrentPackage",
        "title": "CES Validator: Validate Current Package"
      },
      {
        "command": "cesValidator.clearDiagnostics",
        "title": "CES Validator: Clear Diagnostics"
      },
      {
        "command": "cesValidator.refreshTree",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "cesValidator.refreshTree",
          "when": "view == cesPackageExplorer",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "build": "npm run compile && npm run bundle",
    "compile": "tsc -p .",
    "bundle": "node esbuild.mjs",
    "watch": "tsc -watch -p .",
    "pretest": "npm run compile",
    "test": "node --test dist/test/**/*.test.js",
    "vscode:prepublish": "npm run compile && npm run bundle"
  },
  "dependencies": {
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.96.0",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.2"
  }
}
